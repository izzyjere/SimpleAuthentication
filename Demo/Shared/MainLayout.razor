@inherits LayoutComponentBase

<PageTitle>Demo</PageTitle>

<div class="page">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>
        </Authorized>
    </AuthorizeView>
    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <a class="btn btn-info" href="logout">Logout</a>
                </Authorized>
                <NotAuthorized>
                    <a class="btn btn-warning" href="login">Login</a>
                    <a class="btn btn-info" href="register">Register</a>
                </NotAuthorized>
            </AuthorizeView>
           
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
